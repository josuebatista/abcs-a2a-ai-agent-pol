  "usage_examples": {
    "curl_local": "curl -X POST http://localhost:8080/rpc -H \"Authorization: Bearer YOUR_KEY\" -H \"Content-Type: application/json\" -d @test-payloads-examples.json",
    "curl_production": "curl -X POST https://a2a-agent-298609520814.us-central1.run.app/rpc -H \"Authorization: Bearer YOUR_KEY\" -H \"Content-Type: application/json\" -d '{...payload...}'",
    "postman": "Import this file into Postman and use the examples directly",
    "windows_powershell": "Invoke-RestMethod -Uri $URL -Method Post -Headers @{\"Authorization\"=\"Bearer $KEY\"; \"Content-Type\"=\"application/json\"} -Body (Get-Content test-payloads-examples.json)"
  },

  "notes": [
    "Replace 'your-task-id-here' with actual task ID from previous requests",
    "All A2A methods (message/send, tasks/list, tasks/get) require authentication",
    "Legacy methods are deprecated - use message/send for new implementations",
    "Default pagination: 20 tasks per page, max 100",
    "Valid statuses: pending, running, completed, failed, canceled, input-required, auth-required, rejected",
    "Valid skills: summarization, sentiment-analysis, entity-extraction"
  ]
